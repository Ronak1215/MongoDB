<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="/stylesheets/style.css">
    <title>Document</title>
  </head>
  <body>
    <div class="w-full h-screen bg-zinc-900 p-10 text-white">
      <div class="nav mb-10">
        <a class="text-blue-500" href="/">Back to Home</a>
      </div>
      <h1 class="text-3xl tracking-tighter mb-3">ALL Users</h1>
      <div class="users flex flex-wrap gap-3">
        <% if(users.length > 0) { %>
          <% users.forEach(function(user){ %>
            <div class="user w-72 p-4 bg-zinc-800 rounded-lg">
              <div class="w-full h-72 rounded-lg bg-zinc-700 overflow-hidden">
                <img class="h-full w-full object-cover" src="<%= user.image %>" alt="">
              </div>
              <h3 class="text-xl mt-3 tracking-tighter"><%= user.name %></h3>
              <h5 class="text-zinc-500"><%= user.email %></h5>
              <div class="flex gap-3 mt-10">
                <a class="text-zinc-200" href="/edit/<%=user.id%>">Edit User</a>
                <a class="text-red-500" class href="/delete/<%=user.id%>">Delete</a>
                </div>
              </div>
          <% }) %>
       <% } else{ %>
            <h3 class="text-zinc-500">No Users Found</h3>
       <% } %>
       
        </div>
      </div>
    </body>
  </html>